{% extends 'AppBundle:Index:login.html.twig' %}
{% set translationDomain = "login" %}
{% trans_default_domain translationDomain %}

{% block title %}{{ 'manualLogout.pageTitle' | trans }}{% endblock %}
{% block contentClass %}{{ parent() }} sign-in-page--manual-signout{% endblock %}


{% block pageHeader %}
    {{ parent() }}

    {% include 'AppBundle:Components/Page:_page-section-title.html.twig' with {
    transDomain: translationDomain,
    pageSectionTitle: 'manualLogout.pageSectionTitle'
    } %}

    {% include 'AppBundle:Components/Page:_page-section-description.html.twig' with {
    transDomain: translationDomain,
    pageSectionDescription: 'manualLogout.pageSectionDescription',
    additionalClass: 'behat-region-manual-logout-message'
    } %}

{% endblock %}
