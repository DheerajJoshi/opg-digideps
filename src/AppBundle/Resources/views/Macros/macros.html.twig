{# Related section links on the summary pages #}
{% macro relatedSections(report,section) %}
    {% set isUserNdrEnabled = app.user.isNdrEnabled() %}
    {% set isOrgUser = app.user.isDeputyOrg() %}

    <aside class="govuk-related-items" role="complementary">
        <ul class="list font-xsmall">
            <li>
                {% if isUserNdrEnabled %}
                    <a href="{{ path('ndr_overview', {'ndrId': report.id}) }}">
                        New deputy report overview
                    </a>
                {% else %}
                    <a href="{{ path('report_overview', {'reportId': report.id}) }}">
                        {% if isOrgUser %}
                            Client profile
                        {% else %}
                            Deputy report overview
                        {% endif %}
                    </a>
                {% endif %}
            </li>
            <li>
                <a href="{{ section_link_params(report, section, +1).link }}">Next section:
                    {{ ('prevNextLinks.sections.' ~ section_link_params(report, section, +1).section) | trans({}, 'report-common') }}</a>
            </li>
        </ul>
    </aside>
{% endmacro %}
