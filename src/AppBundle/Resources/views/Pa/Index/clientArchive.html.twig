{% extends 'AppBundle:Layouts:application.html.twig' %}

{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% set translationDomain = "pa-client-archive" %}
{% trans_default_domain translationDomain %}

{% block htmlTitle %}{{ 'htmlTitle' | trans }}{% endblock %}
{% block pageTitle %}{{ 'pageTitle' | trans({'%caseNumber%': client.caseNumber }) }}{% endblock %}
{% block pageTitleClass %}heading-large{% endblock %}

{% block supportTitleTop %}
    <span class="heading-secondary">
        {{ 'supportTitle' | trans({'%fullName%': client.fullname | title }) }}
    </span>
{% endblock %}

{% block pageContent %}

    <p class="text">{{ 'description' | trans }}</p>

    {{ form_start(form, {attr: {novalidate: 'novalidate'} }) }}

    <div class="form-section push--bottom">
        <div class="form-group flush--bottom">
            {{ form_checkbox_group(form.confirmArchive, 'form.confirmArchive', {
                'useFormGroup': false,
                'fieldSetClass' : 'inline',
                'legendClass' : 'heading-medium',
                'legendText' : 'form.confirmArchive.label' | trans,
                'items': [{'dataTarget': 'has-capacity-changed-details'}]
            }) }}
        </div>
    </div>

    {{ form_submit(form.save, 'form.save') }}

    {#<a href="{{ backLink }}" class="button-link">{{ 'cancel' | trans({}, 'common') }}</a>#}

    {{ form_end(form) }}

{% endblock %}
