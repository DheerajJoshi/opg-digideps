{% extends 'AppBundle:Layouts:application.html.twig' %}

{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% set translationDomain = "pa-profile" %}
{% trans_default_domain translationDomain %}

{% block htmlTitle %}Settings - update your account{% endblock %}
{% block pageTitle %}Update your account{% endblock %}
{% block pageTitleClass %}heading-large{% endblock %}
{% block supportTitleTop %}
    <span class="heading-secondary">{{ 'yourDetails.supportTitle' | trans }}</span>
{% endblock %}

{% block breadcrumbs %}
    {{ macros.breadcrumbsPASettings('profile-edit') }}
{% endblock %}

{% block pageContent %}
    {{ form_start(form, {attr: {novalidate: 'novalidate' }}) }}

    {{ form_input(form.firstname,'form.firstname') }}

    {{ form_input(form.lastname,'form.lastname') }}

    {{ form_input(form.email,'form.email') }}

    {{ form_input(form.jobTitle, 'form.jobTitle') }}

    {{ form_input(form.phoneMain,'form.phoneMain') }}

    {% if form.removeAdmin is defined %}
    {{ form_checkbox_group(
        form.removeAdmin, 'form.removeAdmin', {'fieldSetClass' : 'inline'}
    ) }}
    {% endif %}

    {{ form_submit(form.save,'form.save', {'buttonClass': 'behat-link-save'}) }}
    {% include 'AppBundle:Components/Link:_link-button.html.twig' with {
        transDomain: translationDomain,
        linkButtonLabel: 'Cancel',
        linkClass: 'button-link',
        linkHref: path('pa_profile_show')
    } %}
    {{ form_end(form) }}
{% endblock %}