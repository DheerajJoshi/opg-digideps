{% embed 'AppBundle:Layouts:report_left_nav.html.twig' %}

    {% set translationDomain = "report-accounts" %}
    {% trans_default_domain translationDomain %}

    {% block pageTitle %}{{ 'page.htmlTitle' | trans }}{% endblock %}
    {% block title %}{{ 'page.pageSectionTitle' | trans }}{% endblock %}
    
    {% block leftcontent %}
        {% include 'AppBundle:Account2:left-nav.html.twig'%}
    {% endblock %}
    
    {% block maincontent %}

        {% include 'AppBundle:Components/Page:_page-section-title.html.twig' with {
        transDomain: translationDomain,
        pageSectionTitle: 'moneyIn.pageSectionTitle'
        } %}

        {% include 'AppBundle:Components/Page:_page-section-description.html.twig' with {
        transDomain: translationDomain,
        pageSectionDescription: 'moneyIn.pageSectionDescription'
        } %}

        {% include 'AppBundle:Account2:transactions.html.twig' with {
        transDomain: translationDomain,
        pageSectionDescription: 'page.pageSectionDescription',
        transactionsGrouped: report.groupByCategory(report.transactionsIn),
        transactionsTotal: report.getTotalAmount(report.transactionsIn),
        formTransactions: form.transactionsIn
        } %}
        
    {% endblock %}

{% endembed %}
