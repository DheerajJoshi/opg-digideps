{% set id = random() %}
<div class="form-group form-date {% if not element.vars.valid %}field-with-errors behat-region-form-errors{% endif %}" id="{{ id }}">
    <fieldset>
        <legend class="form-label">{{ legendText }}</legend>
        <p class="form-hint">{{ hintText }}</p>
        {% if not element.vars.valid %}
            <ul class="errors">
                <li class="error-message">{{ form_errors(element) }}</li>
            </ul>
        {% endif %}
        {% if showDay == 'true' %}
            <div class="form-group form-group-day">
                {{ form_label(element.day,'Day', {'label_attr': {'for': 'dob-day', 'class': 'visuallyhidden' } }) }}
                {{ form_widget(element.day, { 'type':'number','attr': {'class': 'form-control', 'pattern': '[0-9]', 'maxlength': 2, 'value': element.day.vars.value | pad_day_month }}) }}
            </div>
        {% else %}
            {{ form_widget(element.day, { 'type':'hidden', 'value': '01' }) }}
        {% endif %}

        <div class="form-group form-group-month">
            {{ form_label(element.month,'Month', {'label_attr': {'for': 'dob-month', 'class': 'visuallyhidden' } }) }}
            {{ form_widget(element.month, { 'type':'number', 'attr': {'class': 'form-control', 'pattern': '[0-9]', 'maxlength': 2, 'value': element.month.vars.value | pad_day_month}}) }}
        </div>

        <div class="form-group form-group-year">
            {{ form_label(element.year,'Year', {'label_attr': {'for': 'dob-year', 'class': 'visuallyhidden' } }) }}
            {{ form_widget(element.year, { 'type':'number','attr': {'class': 'form-control', 'pattern': '[0-9]', 'maxlength': 4}}) }}
        </div>
    </fieldset>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        new opg.DateValidate('#{{ id }}');
    });
</script>