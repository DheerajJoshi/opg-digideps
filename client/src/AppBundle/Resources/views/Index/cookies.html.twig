{% extends 'AppBundle:Layouts:application.html.twig' %}

{% set translationDomain = "cookies" %}
{% trans_default_domain translationDomain %}

{% block htmlTitle %}{{ 'htmlTitle' | trans }}{% endblock %}
{% block pageTitle %}{{ 'pageTitle' | trans }}{% endblock %}

{% block pageContent %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {{ form_start(form) }}

            <p>Cookies are files saved on your phone, tablet or computer when you visit a website.</p>
            <p>We use cookies to store information about how you use the the Complete the deputy report service, such as the pages you visit.</p>

            <h2 class="govuk-heading-l">Cookie settings</h2>

            <p>We use 2 types of cookie. You can choose which cookies you're happy for us to use.</p>

            {{ form_checkbox_group(form.usage, 'form.usage', {
                'legendClass' : 'govuk-fieldset__legend--m'
            }) }}

            <h3 class="govuk-heading-m">Strictly necessary cookies</h3>

            <p>These essential cookies allow you to log in to the service. They always need to be on.</p>

            {{ form_submit(form.confirm, 'form.confirm') }}

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
