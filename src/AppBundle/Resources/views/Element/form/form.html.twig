{% extends 'AppBundle:Layouts:application.html.twig' %}



{% block pageTitle %}Digideps Styleguide{% endblock %}

{% block pageContent %}
    <link href="/prism/prism.css" rel="stylesheet" type="text/css"/>

    {% include 'AppBundle:Components/Navigation:_bread-crumb.html.twig' with {
    breadCrumb: breadCrumb
    } %}

    <div class="grid-row">
        <header id="page-header" class="column-two-thirds">
            <h1 class="heading-xlarge">
                <span class="heading-secondary">Digideps Elements</span>
                Form Elements
            </h1>

            <p class="lede">
                Enhanced form controls created for specific kids of data. 
            </p>
        </header>
    </div>
    <div class="grid-row">
        <div class="column-two-thirds">
            <h2 class="heading-small heading-contents">Contents:</h2>
            <ul class="list list-contents">
                <li>
                    <a href="#prefix">Prefix field</a>
                </li>
                <li>
                    <a href="#pre-input">Pre input text field</a>
                </li>
                <li>
                    <a href="#horizontal">Horizontal field</a>
                </li>
                <li>
                    <a href="#date-field">Short date field</a>
                </li>
                <li>
                    <a href="#sort-code">Sort code field</a>
                </li>
                <li>
                    <a href="#radio-vertical">Vertical Radio</a>
                </li>
                <li>
                    <a href="#date-field">Short date fields</a>
                </li>
                <li>
                    <a href="#expanding-transactions">Expanding transaction table</a>
                </li>
                <li>
                    <a href="#expanding-textarea">Expanding textarea</a>
                </li>
            </ul>
        </div>
    </div>
    
    <!-- Prefix Field -->
    <div class="grid-row">
        <div id="prefix" class="column-two-thirds">
            <h3 class="heading-large">Prefix field</h3>
            <p>The prefix field allows a field to have a single character prefixed in front of it, primarily used to capture financial information.</p>
        </div>
    </div>
    <div class="example">
        <div class="form-group">
            <label class="form-label" for="balance">How much was in the account on 1 January 2014?</label>
            <span class="input-group-prefix">£</span>
            <input type="text" id="balance" name="account[balance]" class="form-control form-control__number"/>
        </div>
    </div>
    <div class="html">
        <pre><code class="language-markup">&lt;div class="form-group">
    &lt;label class="form-label" for="balance">How much was in the account on 1 January 2014?&lt;/label>
    &lt;span class="input-group-prefix">£&lt;/span>
    &lt;input type="text" id="balance" name="account[balance]" class="form-control form-control__number"/>
&lt;/div></code></pre>
    </div>

    <!-- Pre input text Field -->
    <div class="grid-row">
        <div id="pre-input" class="column-two-thirds">
            <h3 class="heading-large">Pre input text field</h3>
            <p>Like prefix, but outside of the input box. This is a handy pattern for when you need to put some text immediately in front of an input box</p>
        </div>
    </div>
    <div class="example">
        <div class="form-group ">
            <label class="form-label" for="accno">Last 4 digits of the account number</label>
            <span class="pre-input-text">* * * *</span>
            <input type="text" id="accno" name="account[accno]" maxlength="4" class="form-control account-number"/>
        </div>
    </div>
    <div class="html">
        <pre><code class="language-markup">&lt;div class="form-group ">
    &lt;label class="form-label" for="accno">Last 4 digits of the account number</label>
    &lt;span class="pre-input-text">* * * *</span>
    &lt;input type="text" id="accno" name="account[accno]" class="form-control account-number" maxlength="4"/>
&lt;/div></code></pre>
    </div>

    <!-- sort Field -->
    <div class="grid-row">
        <div id="sort-code" class="column-two-thirds">
            <h3 class="heading-large">Sort code field</h3>
            <p>Not strictly a new field type, more of a pattern to follow.</p>
        </div>
    </div>
    <div class="example">
        <div class="form-group">
            <fieldset>
                <legend class="form-label">Branch sort code</legend>
                <div class="form-sort-code">
                    <div class="form-group">
                        <label for="sort_code_part_1" class="visuallyhidden">Sort Code part 1</label>
                        <input type="text" id="sort_code_part_1" class="sort-code-part form-control" name="account[sortCode][sort_code_part_1]" maxlength="2"/>
                    </div>
                    <div class="separator">-</div>
                    <div class="form-group">
                        <label for="sort_code_part_2" class="visuallyhidden">Sort Code part 2</label>
                        <input type="text" id="sort_code_part_2" class="sort-code-part form-control" name="account[sortCode][sort_code_part_2]" maxlength="2"/>
                    </div>
                    <div class="separator">-</div>
                    <div class="form-group">
                        <label for="sort_code_part_3" class="visuallyhidden">Sort Code part 3</label>
                        <input type="text" id="sort_code_part_3" class="sort-code-part form-control" name="account[sortCode][sort_code_part_3]" maxlength="2"/>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
    <div class="html">
        <pre><code class="language-markup">&lt;div class="form-group">
    &lt;fieldset>
        &lt;legend class="form-label">Branch sort code&lt;/legend>
        &lt;div class="form-sort-code">
            &lt;div class="form-group">
                &lt;label for="sort_code_part_1" class="visuallyhidden">Sort Code part 1&lt;/label>
                &lt;input type="text" id="sort_code_part_1" class="sort-code-part form-control" name="account[sortCode][sort_code_part_1]" maxlength="2"/>
            &lt;/div>
            &lt;div class="separator">-&lt;/div>
            &lt;div class="form-group">
                &lt;label for="sort_code_part_2" class="visuallyhidden">Sort Code part 2&lt;/label>
                &lt;input type="text" id="sort_code_part_2" class="sort-code-part form-control" name="account[sortCode][sort_code_part_2]" maxlength="2"/>
            &lt;/div>
            &lt;div class="separator">-&lt;/div>
            &lt;div class="form-group">
                &lt;label for="sort_code_part_3" class="visuallyhidden">Sort Code part 3&lt;/label>
                &lt;input type="text" id="sort_code_part_3" class="sort-code-part form-control" name="account[sortCode][sort_code_part_3]" maxlength="2"/>
            &lt;/div>
        &lt;/div>
    &lt;/fieldset>
&lt;/div></code></pre>
    </div>


    
    

    <script src="/prism/prism.js"></script>
{% endblock %}
