{% extends 'AppBundle:Layouts:application.html.twig' %}

{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% set translationDomain = "odr-declaration" %}
{% trans_default_domain translationDomain %}

{% block htmlTitle %}{{ 'page.htmlTitle' | trans }}{% endblock %}
{% block pageTitle %}{{ 'page.pageSectionTitle' | trans }}{% endblock %}

{% block breadcrumbs %}
    {{ macros.breadcrumbs(odr) }}
{% endblock %}

{% block pageContent %}

    <div class="text">

        <p>{{ 'page.descriptionPara01' | trans }}</p>
        <p>{{ 'page.descriptionPara02' | trans }}</p>
        <p>{{ 'page.descriptionPara03' | trans }}</p>
        <p>{{ 'page.descriptionPara04' | trans }}</p>

    </div>

    {{ form_start(form, {attr: {novalidate: 'novalidate' }}) }}

    {{ form_checkbox(form.agree, 'agree', { 'labelClass': 'required extra-top' }) }}

    <div class="form-group {% if not form.agreedBehalfDeputy.vars.valid %}error{% endif %}">
        {{ form_checkbox_group(form.agreedBehalfDeputy, 'agreedBehalfDeputy', {
            'useFormGroup': false,
            'legendClass' : 'form-label-bold',
            'items': [
                {},
                {},
                {'dataTarget': 'not-signing-details-wrapper' }
            ]
        }) }}

        <div id="not-signing-details-wrapper" class="panel panel-border-narrow js-hidden">
            {{ form_input(form.agreedBehalfDeputyExplanation, 'agreedBehalfDeputyExplanation') }}
        </div>
    </div>

    <div class="form-group button-bar">
        {{ form_submit(form.save,'save') }}
    </div>

    {{ form_end(form) }}

    {{ macros.notification('notice', 'unableToEditAfterSubmission' | trans()) }}

{% endblock %}
