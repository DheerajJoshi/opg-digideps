{% set translationDomain = "report-pa-fee-expense" %}
{% trans_default_domain translationDomain %}

<table class="check-your-answers columns-2 push-double--bottom">
    <thead>
    <tr>
        <th>Question</th>
        <th>Answer</th>
        <th>
            <span class="visuallyhidden">Actions</span>
        </th>
    </tr>
    </thead>
    <tbody>
    <tr class="behat-region-has-contacts">
        <td>
            {{ 'existPage.form.hasFees.label' | trans(transOptions)  }}
        </td>
        <td>
            {{ report.hasFees | capitalize }}
        </td>
        <td class="change-answer">
            <a href="{{ url('pa_fee_expense_exist', { 'reportId': report.id, 'from': 'summary' }) }}" class="behat-link-edit">{{ 'summaryPage.edit'| trans }}</a>
        </td>
    </tr>
    {% if report.reasonForNoFees %}
        <tr class="behat-region-reason-no-contacts">
            <td>Reason for not having charged the client any fees for your services during the reporting period</td>
            <td>{{ report.reasonForNoFees | nl2br }}</td>
            <td class="change-answer">
                <a href="{{ path('pa_fee_expense_exist', { 'reportId': report.id, 'from': 'summary'}) }}" class="action-link behat-link-edit">{{ 'summaryPage.edit'| trans }}</a>
            </td>
        </tr>
    {% endif %}
    </tbody>
</table>

