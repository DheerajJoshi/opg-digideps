{% extends 'AppBundle:Layouts:application_new.html.twig' %}

{% set translationDomain = "user-activate" %}
{% trans_default_domain translationDomain %}

{% block htmlTitle %}{{ 'pageTitle' | trans }}{% endblock %}
{% block pageTitle %}{{ 'h1Title' | trans }}{% endblock %}

{% block progressBar %}
        {{ progress_bar_registration(user, 'password') }}
{% endblock %}

{% block helpline %}{% endblock %}

{% block pageContent %}

    {{ form_start(form, {attr: {novalidate: 'novalidate' }}) }}

    {{ form_input(form.password.first,'password', { 'labelClass': 'required' } ) }}

    {{ form_input(form.password.second,'password_confirm', { 'labelClass': 'required' } ) }}

    {{ form_submit(form.save,'submit', {'buttonClass': 'behat-link-save'}) }}

    {{ form_end(form) }}

{% endblock %}
