{% extends 'AppBundle:Layouts:application.html.twig' %}

{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% set translationDomain = "pa-team" %}
{% trans_default_domain translationDomain %}

{% block htmlTitle %}{{ 'addPage.htmlTitle' | trans }}{% endblock %}
{% block pageTitle %}{{ 'addPage.h1Title' | trans }}{% endblock %}

{% block linkBack %}
    <a href="{{ path('pa_team') }}" class="link-back behat-link-back">Back</a>
{% endblock %}

{% block breadcrumbs %}
    {{ macros.breadcrumbsSettings('user-add') }}
{% endblock %}

{% block pageContent %}
    {{ form_start(form, {attr: {novalidate: 'novalidate' }}) }}

    {{ form_input(form.firstname,'form.firstname') }}

    {{ form_input(form.lastname,'form.lastname') }}

    {{ form_input(form.email,'form.email') }}

    {{ form_checkbox_group(form.roleName, 'form.roleName', {
        'legendClass' : 'form-label-bold'
    }) }}

    {{ form_submit(form.save,'form.save', {'buttonClass': 'behat-link-save'}) }}

    {{ form_end(form) }}

{% endblock %}
