{% extends 'AppBundle:Components/Page:page.html.twig' %}
{% trans_default_domain "login" %}
{% block pageTitle %} {% trans %}pageTitle{% endtrans %} {% endblock %}


{% block content %}

  <form action="{{ path('login_check') }}" method="post">

    <div class="form-group ">
      <label class="form-label form-label-bold required" for="email">{% trans %}email.label{% endtrans %}</label>
      <p class="form-hint">{% trans %}email.hint{% endtrans %}</p>
      <input type="text" id="email" name="email" value="{{ last_email }}" class="form-control" size="50" />
    </div>

    <div class="form-group ">
      <label class="form-label form-label-bold required" for="password">{% trans %}password.label{% endtrans %}</label>
      <input type="password" id="password" name="password" class="form-control" size="50" />
    </div>

      {#
          If you want to control the URL the user
          is redirected to on success (more details below)
          <input type="hidden" name="_target_path" value="/account" />
      #}

    <button type="submit" class="button behat-link-login">{% trans %}submit.label{% endtrans %}</button>

  </form>
    
    
    <br/></br>
    
    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
    {{ form_input(form.email,'email', { 'labelClass': 'form-label-bold required' }) }}
    {{ form_input(form.password,'password', { 'labelClass': 'form-label-bold required' } ) }}
    {{ form_submit(form.login,'login')}}
    {{ form_end(form) }}

{% endblock %}
