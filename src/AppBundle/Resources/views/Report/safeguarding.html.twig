{% embed 'AppBundle:Components/Page:page-report.html.twig' with {
activeTab: "tab-safeguarding"
} %}

{% set translationDomain = "report-safeguarding" %}
{% trans_default_domain translationDomain %}

 {% block bodyClasses %}safeguarding-page{% endblock %}

{% block pageTitle %}{{ 'page.htmlTitle' | trans }}{% endblock %}
{% block contentClass %}{{ parent() }} js-report-decisions-input{% endblock %}
{% block title %}{{ 'page.htmlTitle' | trans }}{% endblock %}


{% block pageBody %}

    {% include 'AppBundle:Components/Page:_page-section-title.html.twig' with {
    transDomain: translationDomain,
    pageSectionTitle: 'page.pageSectionTitle'
    } %}

    {% include 'AppBundle:Components/Page:_page-section-description.html.twig' with {
    transDomain: translationDomain,
    pageSectionDescription: 'page.pageSectionDescription'
    } %}
      
    {{ form_start(form, {attr: {novalidate: 'novalidate', class: 'in-page-form' }}) }}
    
    {% include 'AppBundle:Components/Page:_sub-section-title.html.twig' with {
    transDomain: translationDomain,
    subSectionTitle: 'form.contact.subSectionTitle'
    } %}
    
    {{ form_checkbox_group(form.doYouLiveWithClient, 'doYouLiveWithClient', {
        'fieldSetClass' : 'inline do-you-live-radio',
        'legendClass' : 'form-label',
        'items': [
            {'labelClass': 'block-label', 'elementClass': '', 'label':'Yes' },
            {'labelClass': 'block-label', 'elementClass': '' }
        ]
    }) }}
    
    {{ form_checkbox_group(form.howOftenDoYouVisit, 'howOftenDoYouVisit', {
        'legendClass' : 'form-label',
        'legendText' : 'Test',
        'vertical': true
    }) }}
    
    {{ form_checkbox_group(form.howOftenDoYouPhoneOrVideoCall, 'howOftenDoYouPhoneOrVideoCall', {
        'legendClass' : 'form-label',
        'vertical': true
    }) }}
    
    {{ form_checkbox_group(form.howOftenDoYouWriteEmailOrLetter,
        'howOftenDoYouWriteEmailOrLetter', {
        'legendClass' : 'form-label',
        'vertical': true
    }) }}
    
    {{ form_checkbox_group(form.howOftenDoesClientSeeOtherPeople, 
        'howOftenDoesClientSeeOtherPeople', {
        'legendClass' : 'form-label',
        'vertical': true
    }) }}
    {{ form_end(form) }}

         
    <hr/>
    
    {{form(form)}}

    <script type="text/javascript">
        $(document).ready(function() {
            $(".radio-vertical-group").each(function(index, element) {
                new opg.RadioGroup(element);
                new GOVUK.SelectionButtons(".do-you-live-radio :radio");
            });
        });
    </script>

{% endblock %}

{% endembed %}