<li class="transfer" >
   <form id="form_transfer_{{ transfer.id }}">
   <input type="hidden" name="id" value="{{ transfer.id }}" />
   <div class="grid-row card-select-row behat-region-transfer"  >
      <div class="column-one-half"  >
         <div class="form-label"  >
            From:
         </div>
         <ul class="card-list">
            {% include 'AppBundle:MoneyTransfer:card.html.twig' with {
                'account': transfer.accountFrom,
                'additionalClass': 'expandable',
            }%}
         </ul>
      </div>
      <div class="column-one-half"  >
         <div class="form-label"  >To:</div>
         <ul class="card-list">
            {% include 'AppBundle:MoneyTransfer:card.html.twig' with {
                'account': transfer.accountTo,
                'additionalClass': 'expandable',
            }%}
         </ul>
      </div>
   </div>
   <div class="grid-row"  >
      <div class="column-one-half">
         <div class="form-group"  ><label class="form-label" for="balance"  >Amount:</label>
             <span class="input-group-prefix"  >Â£</span>
             <input id="balance" name="amount" class="balance form-control form-control__number"  type="text" value="{{ transfer.amount }}">
         </div>
      </div>
      <div class="column-one-half"  >
          <a 
              href="{{ path('transfers_delete', {'reportId': report.id, 'transferId': transfer.id} )}}"
              class="button button-warning delete-button behat-link-delete-confirm"  >Delete</a>
      </div>
   </div>
   </form>
</li>

