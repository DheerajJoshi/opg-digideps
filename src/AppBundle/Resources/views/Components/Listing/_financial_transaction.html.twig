{% set translationDomain = "report-transactions" %}
{% trans_default_domain translationDomain %}

<li class="transaction">
    <div class="transaction-label">{{ ('form.entries.' ~ transaction.transactionTypeId ~ '.label') | trans }}</div>
    <div class="transaction-value">
        <span class="currency">{{ 'currencySymbol' | trans }}</span>
        <span class="amount">{{ transaction.amount | number_format(2, '.', ',') }}</span>
    </div>
    {% if transaction.moreDetails %}
        <br/>
        {{ ('form.entries.' ~ transaction.transactionTypeId ~ '.moreInformations') | trans }}<br/>
        <div class="transaction-detail">{{ transaction.moreDetails }}</div>
    {% endif %}
</li>
