{% embed 'AppBundle:Components/Page:page-report.html.twig' %}

    {% set translationDomain = "report-assets" %}
    {% trans_default_domain translationDomain %}

    {% block pageTitle %}{{ 'page.htmlTitle' | trans }}{% endblock %}
    {% block contentClass %}{{ parent() }} js-report-assets-input{% endblock %}
    {% block title %}{{ 'page.pageSectionTitle' | trans({'%client%': report.client.firstname}, translationDomain) }}{% endblock %}

    {% block pageBody %}

        <p class="page-section-description">{{ 'page.pageSectionDescription' | trans({'%client%': report.client.firstname}, translationDomain) }}</p>

        {% if report.assets is not empty %}
            {% include 'AppBundle:Components/Page:_page-section-description.html.twig' with {
            transDomain: translationDomain,
            pageSectionDescription: 'page.pageSectionEditInfo'
            } %}
        {% endif %}


        {% include 'AppBundle:Components/ButtonBar:_add_button_bar.html.twig' with {
            'report': report,
            'section': 'assets',
            'transDomain': translationDomain,
            'data': report.assets
        } %}

        {% if assets is not empty %}
            {% include 'AppBundle:Asset:_asset_list.html.twig' with {
                'report': report,
                'assets': assets,
            } %}
        {% else %}
            {{ render(controller('AppBundle:Asset:_noAssets', { 'reportId': report.id, 'request': app.request })) }}
        {% endif %}

    {% endblock %}

    {% block pageBodyFooterNav %}
        {% if (report.accounts | length) > 1 %}
            {% include 'AppBundle:Components:nextprevious.html.twig' with {
            'previousLink': path("transfers" , {'reportId': report.id }),
            'previousLabel': 'Money transfers',
            'nextLink': path("report_overview" , {'reportId': report.id }),
            'nextLabel': 'Report overview'
            } %}
        {% else %}
            {% include 'AppBundle:Components:nextprevious.html.twig' with {
            'previousLink': path("accounts_balance" , {'reportId': report.id }),
            'previousLabel': 'Balance accounts',
            'nextLink': path("report_overview" , {'reportId': report.id }),
            'nextLabel': 'Report overview'
            } %}
        {% endif %}
    {% endblock %}

{% endembed %}
