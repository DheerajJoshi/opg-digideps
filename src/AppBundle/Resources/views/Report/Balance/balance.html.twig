{% extends 'AppBundle:Layouts:application_new.html.twig' %}

{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% set translationDomain = "report-accounts" %}
{% trans_default_domain translationDomain %}

{% block htmlTitle %}{{ 'page.htmlTitle' | trans }}{% endblock %}
{% block pageTitle %}{{ 'page.pageSectionTitle' | trans }}{% endblock %}

{% block breadcrumbs %}
    {{ macros.breadcrumbs(report) }}
{% endblock %}

{% block pageContent %}

    {% if report.isMissingMoneyOrAccountsOrClosingBalance() %}
        {% include 'AppBundle:Report/Balance:_balance-incomplete.html.twig' %}
    {% elseif report.isTotalsMatch %}
        {% include 'AppBundle:Report/Balance:_balance-good.html.twig' %}
    {% else %}
        {% include 'AppBundle:Report/Balance:_balance-bad.html.twig' %}
    {% endif %}
{% endblock %}

    {% block pageBodyFooterNav %}

        {% include 'AppBundle:Components:nextprevious.html.twig' with {
        'previousLink': path("money_out" , {'reportId': report.id }),
        'previousLabel': 'Money out',
        'nextLink': path("assets" , {'reportId': report.id }),
        'nextLabel': 'Assets'
        } %}

    {% endblock %}
