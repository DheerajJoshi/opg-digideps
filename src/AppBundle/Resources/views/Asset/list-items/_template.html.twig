{% set translationDomain = "report-assets" %}
{% trans_default_domain translationDomain %}

<div class="descriptive-list-item">
    <div class="column first">
        {% block firstColumn %}
        {% endblock %}
    </div>
    <div class="column second">
        {% block secondColumn %}
        {% endblock %}
    </div>
    <div class="column third" >
        <a href="{{ url('delete_asset', { 'reportId': report.id, 'id': asset.id }) }}" class="edit-link " style="float: none; margin: 5px" >Remove</a>
        <span href="{{ url('asset_edit', { 'reportId': report.id, 'assetId': asset.id }) ~ '#asset-edit-' ~ asset.id }}" class="open-button button" >Edit</span>
    </div>
</div>