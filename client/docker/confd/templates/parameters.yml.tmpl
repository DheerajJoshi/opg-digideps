parameters:
    locale: en
    secret: {{ getv "/secret" }}
    api_base_url: {{ getv "/api/url" }}
    api_client_secret: {{ getv "/api/client/secret" }}
    non_admin_host: {{ getv "/nonadmin/host" }}
    admin_host: {{ getv "/admin/host" }}
    client_base_urls:
        front: "%non_admin_host%"
        admin: "%admin_host%"
    env:  {{ getv "/role" }}
    session_expire_seconds: 3900
    session_popup_show_after: 3600
    session_cookie_secure: {{ getv "/session/cookie/secure" "true" }}
    redis_dsn:  {{ getv "/session/redis/dsn" }}
    session_prefix: dd_session
    use_redis: true
    session_engine: redis
    log_level: warning
    log_path: /var/log/app/application.log
    ga:
        default: {{ getv "/ga/default" }}
        gds: {{ getv "/ga/gds" }}
    opg_docker_tag: {{ getv "/opg/docker/tag" }}
    mock_emails: {{ if eq (getv "/mock/emails") "true" }}true{{ else }}false{{ end }}
    email_send:
        from_email: noreply-opgdeputyservice@{{ getv "/email/domain" }}
        to_email: -
    {{ if eq (getv "/email/send/internal") "true" }}
    email_report_submit:
        from_email: noreply-opgdeputyservice@{{ getv "/email/domain" }}
        to_email: deputyshipservice@publicguardian.gov.uk
    email_feedback_send:
        from_email: noreply-opgdeputyservice@{{ getv "/email/domain" }}
        to_email: digideps+feedback@digital.justice.gov.uk
    email_update_send:
        from_email: noreply-opgdeputyservice@{{ getv "/email/domain" }}
        to_email: laydeputysupport@publicguardian.gov.uk
    {{ else }}
    email_report_submit:
        from_email: noreply-opgdeputyservice@digital.justice.gov.uk
        to_email: digideps+noop@digital.justice.gov.uk
    email_feedback_send:
        from_email: noreply-opgdeputyservice@digital.justice.gov.uk
        to_email: digideps+noop@digital.justice.gov.uk
    email_update_send:
        from_email: noreply-opgdeputyservice@digital.justice.gov.uk
        to_email: digideps+noop@digital.justice.gov.uk
    {{ end }}
  {{ if lsdir "/smtp" }}
    smtp_default_hostname: {{ getv "/smtp/default/hostname" "email-smtp.eu-west-1.amazonaws.com" }}
    smtp_default_port: {{ getv "/smtp/default/port" "587" }}
    smtp_default_user: {{ getv "/smtp/default/user" }}
    smtp_default_password: {{ getv "/smtp/default/password" }}
  {{ end }}
    wkhtmltopdf_address: {{ if exists "/wkhtmltopdf/address" }}{{ getv "/wkhtmltopdf/address" }}{{ else }}'http://wkhtmltopdf'{{ end }}
    s3_bucket_name: {{ if exists "/s3/bucketname" }}{{ getv "/s3/bucketname" }}{{ else }}not_set{{ end }}
    s3_client_params:
      version: 'latest'
      region: 'eu-west-1'
  {{ if exists "/s3/localstack" }}
      endpoint: 'http://localstack:4572'
      use_path_style_endpoint: true
      validate: false
      credentials:
        key: 'FAKE_ID'
        secret: 'FAKE_KEY'
  {{ else }}
      validate: true
  {{ end }}
    file_scanner_url: {{ if exists "/filescanner/url" }}{{ getv "/filescanner/url" }}{{ else }}http://file-scanner-rest:8080{{ end }}
    file_scanner_sslverify: {{ if exists "/filescanner/sslverify" }}{{ getv "/filescanner/sslverify" }}{{ else }}true{{ end }}
