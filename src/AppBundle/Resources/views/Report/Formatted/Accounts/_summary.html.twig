<div id="account-summary" class="summary-container">
    <h3>Summary</h3>
    <div>
        <h4>Accounts summary</h4>
        <table>
            <thead>
                <tr>
                    <th scope="col">&nbsp;</th>
                    <th class="grey numeric" scope="col">Opening balance</th>
                    <th class="numeric" scope="col">Change</th>
                    <th class="grey numeric" scope="col">Closing balance</th>
                </tr>
            </thead>
            <tbody>

            {% for account in report.accounts %}
                <tr>
                    <td>
                        <div class="account-name">{{ account.bank }}</div>
                        <div class="account-number">****{{ account.accountNumber }}, {{ account.sortCode | split('', 2) | join('-') }}</div>
                    </td>
                    <td class="numeric">£{{ account.openingBalance }}</td>
                    <td class="numeric">£ {{ (account.closingBalance - account.openingBalance) | number_format(2, '.', ',') }}</td>
                    <td class="numeric">£{{ account.closingBalance }}</td>
                </tr>
            {% endfor %}
                <tr class="totals">
                    <td>&nbsp;</td>
                    <td class="numeric">£{{ report.accountsOpeningBalanceTotal | number_format(2, '.', ',') }}</td>
                    <td>&nbsp;</td>
                    <td class="numeric reverse">£{{ report.accountsClosingBalanceTotal | number_format(2, '.', ',')}}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div>
        <h4>Balance after income and expenditure</h4>
        <table>
            <tbody>
                <tr>
                    <td>Total of all opening balances:</td>
                    <td class="grey numeric">£{{ report.accountsOpeningBalanceTotal | number_format(2, '.', ',') }}</td>
                </tr>
                <tr>
                    <td>Total money in:</td>
                    <td class="grey numeric">£{{ report.moneyInTotal | number_format(2, '.', ',')}}</td>
                </tr>
                <tr>
                    <td>Total money out:</td>
                    <td class="grey numeric">£{{ report.moneyOutTotal | number_format(2, '.', ',')}}</td>
                </tr>
                <tr class="total">
                    <td>&nbsp;</td>
                    <td class="numeric reverse">£{{ report.accountsClosingBalanceTotal | number_format(2, '.', ',')}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>