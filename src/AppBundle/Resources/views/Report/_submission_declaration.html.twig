{% set translationDomain = "report-declaration" %}
{% trans_default_domain translationDomain %}

<div class="box">

    {% include 'AppBundle:Components/Page:_page-section-title.html.twig' with {
        transDomain: "report-declaration",
        pageSectionTitle: 'page.pageSectionTitle'
    } %}

    {% include 'AppBundle:Components/Page:_page-section-description.html.twig' with {
        transDomain: "report-declaration",
        pageSectionDescription: 'page.pageSectionDescription',
        transOptions: {'%separator%': '<br/><br/>'}
    } %}

    <div class="item">
        <dl class="labelvalue">
            <dt class="label">{{ 'status' | trans() }}</dt>
            <dd class="value" id="statusString">
                {% if (report.isAllAgreed == true) %}
                    {{ 'deputyAgreed' | trans() }}
                {% else %}
                    {{ 'partlyAgreed' | trans() }}
                {% endif %}
            </dd>

            {% if (report.isAllAgreed == false) %}
                <dt class="label">{{ 'partAgreedReason' | trans() }}</dt>
                <dd class="value">{{ report.reasonNotAllAgreed }}</dd>
            {% endif %}
            <dt class="label">{{ 'declarationTime' | trans() }}</dt>
            <dd class="value">{{report.submitDate | date("H:i") }}&nbsp;&nbsp;&nbsp;{{report.submitDate | date("d/m/Y") }}</dd>
            <dt class="label">{{ 'deputyName' | trans() }}</dt>
            <dd class="value" id="statusDeputyName">{{ deputy.fullname }}</dd>
        </dl>
    </div>
</div>
