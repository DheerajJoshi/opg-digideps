<h3 class="heading-medium">{{ 'balance.bad.checkYourAccounts' | trans }}</h3>
<p class="balance-warning page-section-warning">
    <span class="icon icon__notification"></span>
    <span class="page-section-description left-margin-big">{{ 'balance.bad.goBack' | trans({
        '%client%': report.client.firstname, 
        '%accountsLink%': path('accounts', {'reportId': report.id}), 
        '%moneyInLink%': path('accounts_moneyin' , {'reportId': report.id}) , 
        '%moneyOutLink%': path('accounts_moneyout' , {'reportId': report.id}) 
    }) | raw }}</span>
</p>

<h3 class="heading-medium">{{ 'balance.bad.cantFind' | trans }}</h3>
{{ form_start(form, {attr: {novalidate: 'novalidate' }}) }}

    {{ form_input(form.balanceMismatchExplanation, 'balance.bad.formtitle', {
        'labelText': 'balance.bad.formtitle.label' | trans( {'%difference%': report.totalsOffset  | abs | money_format}),
        'inputClass': 'expanding'
    }) }}
    
    {% include 'AppBundle:Components/ButtonBar:_save_bar.html.twig' with {
