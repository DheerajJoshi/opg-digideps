{% extends 'AppBundle:Layouts:application.html.twig' %}
{% set translationDomain = "report-odr" %}
{% trans_default_domain translationDomain %}

{% block pageTitle %}{{ 'page.htmlTitle' | trans }}{% endblock %}
{% block bodyClasses %}home{% endblock %}
{% block pageContent %}
    <header class="page-header">
        <h1 class="heading-xlarge">{{ 'page.title' | trans }}</h1>
    </header>

    <div id="page-body">

        <h1>Property and finance</h1>

        {# see _list-reports.html.twig for field rendering #}
        {% for report in reports %}
            {% set linkToReportOverviewPage = path('report_overview', { 'reportId': report.id }) %}
            <div style="border: 1px solid #c0c0c0; ">
                <h2>{{ client.firstname }}</h2>
                <div>{{ report.period }}</div>
                <div>Due: {{ report.dueDate | date }}</div>
                <span class="button-wrapper">
                    <a href="{{ linkToReportOverviewPage }}" class="open-button button behat-link-report-open behat-link-report-{{ report.getPeriod() | behat_namify }}-open">{{ 'reportDataList.startNow' | trans }}</a>
                </span>
                <div>
                    not started
                </div>
            </div>
        {% endfor %}

    </div>

{% endblock %}





