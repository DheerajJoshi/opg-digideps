<!--Component: bread-crumb-->
{% if breadCrumb is defined %}
    <ul class="bread-crumb">
        {% for step in breadCrumb %}
            <li class="bread-crumbs">
                {% if step.href is defined %}
                    <a href="{{ step.href }}" class="bread-crumbs-link">{{ step.label | trans }}</a>
                {% else %}
                    {{ step.label | trans }}
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endif %}
