{% extends 'AppBundle:Email:_template.html.twig' %}

{% set translationDomain = "email-template" %}
{% set translationContext = recipientRole ~ '.' ~ emailType %}

{% trans_default_domain translationDomain %}

{% block emailHTMLHeaderTitle %}Deputy report service - Activate account{% endblock %}

{% block content %}

    <h2 style="Margin: 0 0 20px 0; padding: 0; font-size: 27px; line-height: 35px; font-weight: bold; color: #0B0C0C;">{{ (translationContext ~ '.para1') | trans  }}</h2>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">{{ (translationContext ~ '.para2') | trans  }}</p>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">
        <strong>{{ (translationContext ~ '.para3') | trans  }}</strong>
    </p>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">
        <a style="word-wrap: break-word;" href="{{ link }}">{{ link }}</a>
    </p>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">{{ (translationContext ~ '.para4') | trans  }}</p>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">
        <strong>{{ (translationContext ~ '.para5') | trans  }}</strong>
    </p>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">{{ (translationContext ~ '.para6') | trans({'%homepageUrl%': homepageUrl}) | raw  }}</p>

{% endblock %}
