{% set translationDomain = "client-profile" %}
{% trans_default_domain translationDomain %}
{% set page = "clientContacts" %}

<details class="panel panel-admin hard behat-region-client-profile-contacts">

    <summary class="panel-heading flush--bottom">
        <span class="summary heading-medium">{{ (page ~ '.heading') | trans }}</span>
    </summary>

    <div class="panel-body soft-half">

        <a href="" class="bold-small action-link right behat-link-add-contact-button">
            <span class="icon icon-plus"></span>
            {{ (page ~ '.addContact') | trans }}
        </a>

        {% if contacts %}

            <table>
                <thead>
                    <th>{{ (page ~ '.contactName') | trans }}</th>
                    <th>{{ (page ~ '.organisation') | trans }}</th>
                    <th>{{ (page ~ '.contactInfo') | trans }}</th>
                    <th><span class="visually-hidden">Actions</span></th>
                </thead>

                <tbody>
                 {% for contact in contacts %}
                    <tr class="align--top dont-break-out">
                        <td class="width-quarter">
                            <dl>
                                <dt class="visually-hidden">{{ 'name' | trans({}, 'common') }}</dt>
                                <dd>
                                    <strong class="bold">{{ contact.firstName }} {{ contact.lastName }}</strong>
                                </dd>
                                <dt class="visually-hidden">{{ 'role' | trans({}, 'common') }}</dt>
                                <dd>{{ contact.jobTitle }}</dd>
                            </dl>
                        </td>
                        <td class="width-third">
                            <dl>
                                <dt class="visually-hidden">{{ 'address' | trans({}, 'common') }}</dt>
                                <dd>
                                    {{ contact.orgName }}<br>
                                    {{ contact.address1 }}<br>
                                    {{ contact.address2 }}<br>
                                    {{ contact.address3 }}<br>
                                    {{ contact.addressPostcode }}
                                </dd>
                            </dl>
                        </td>
                        <td class="width-third">
                            <dl>
                                <dt>
                                    <strong class="bold">{{ 'phone' | trans({}, 'common') }}</strong>
                                </dt>
                                <dd class="push--bottom">{{ contact.phone }}</dd>
                                <dt>
                                    <strong class="bold">{{ 'email' | trans({}, 'common') }}</strong>
                                </dt>
                                <dd>{{ contact.email }}</dd>
                            </dl>
                        </td>
                        <td class="width-eighth text--right hard--right">
                            <a href="" class="behat-link-edit-contact-button">{{ 'edit' | trans({}, 'common') }}</a>
                            <a href="" class="behat-link-delete-contact-button">{{ 'remove' | trans({}, 'common') }}</a>
                        </td>

                    </tr>
                 {% endfor %}
                </tbody>
            </table>

        {% else %}

            <p>{{ (page ~ '.noContacts') | trans }}</p>

        {% endif %}
    </div>

</details>
