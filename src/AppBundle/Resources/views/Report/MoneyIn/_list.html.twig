{% set translationDomain = "report-money-transaction" %}
{% trans_default_domain translationDomain %}

<div class="border--thicker">
    <div class="grid-row push--top">
        <div class="column-half">
            <h2 class="heading-medium flush--ends">List of items of income</h2>
        </div>
        <div class="column-half text--right">
            <a href="{{ path('money_in_step' , {'reportId': report.id, 'step': 1}) }}"
                class="bold-small move-quarter--up">
                <span class="icon icon-plus"></span>
                Add item of income
            </a>
        </div>
    </div>
</div>

<table class="check-your-answers behat-region-list-accounts">
    {% for groupId, groupData in report.groupByGroup(report.transactionsIn) %}
        <thead>
            {# temp. change me me #}
            <tr class="border--thicker">
                <th colspan="4">
                    {{ ('form.group.entries.' ~ groupId) | trans }}
                </th>
            </tr>
            <tr>
                <th></th>
                <th>Description</th>
                <th class="text--right">Amount</th>
                <th>
                    <span class="visuallyhidden">Actions</span>
                </th>
            </tr>
        </thead>
        <tbody>
        {% for t in groupData.entries %}
            <tr>
                <td>{{ ('form.category.entries.' ~ t.category ~ '.label') | trans }}</td>
                <td>{{ t.description | nl2br }}</td>
                <td>Â£ {{ t.amount | money_format }}</td>
                <td class="change-answer soft-half--left hard--right">
                    <a class="push-half--right behat-link-account-??"
                       href="{{ path('money_in_step', {'reportId': report.id, 'step': 3, 'transactionId': t.id}) }}">Edit</a>
                    <a class="behat-link-account-??" href="{{ path('money_in_delete', {'reportId': report.id, 'transactionId': t.id}) }}">Remove</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    {% endfor %}
</table>
