{% set translationDomain = "overview" %}
{% trans_default_domain translationDomain %}

{% include 'AppBundle:Components/PageHeader:_report-header.html.twig' %}

{% if reportStatus.isReadyToSubmit and report.isDue %}
    <div id="header-report-submit" class="hero">
        <h2 class="heading">{{ 'reportIsReady' | trans() }}</h2>
        <div class="message">{{ 'yourFinalStep' | trans() }}: <a class="button submit-link" href="{{ path('report_add_further_info', {reportId: report.id}) }}">{{ 'signAndSubmit' | trans() }}</a></div>
    </div>
{% else %}
    <p class="flash flash-news">
        We're changing the way you record money coming into and going out of {{ client.firstname }}'s bank accounts. 
        You won't lose any information you've already entered, and you can carry on with your report 
        as we make these changes.</p>
    
{% endif %}
