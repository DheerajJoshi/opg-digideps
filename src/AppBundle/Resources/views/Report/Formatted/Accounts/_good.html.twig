    <div class="hero">
        <h2 class="heading">These accounts balance</h2>
    </div>

    <div class="hero half-width first">
        <div class="message">Balance after income and expenditure:</div>
        <div class="total">£{{ report.calculatedBalance | number_format(2, '.', ',') }}</div>
