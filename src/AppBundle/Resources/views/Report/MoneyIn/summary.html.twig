{% extends 'AppBundle:Layouts:application_new.html.twig' %}

{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% set translationDomain = "report-money-transaction" %}
{% trans_default_domain translationDomain %}
{% set transOptions = {
    '%client%': report.client.firstname,
    '%startDate%': report.startDate | date("jS F Y"),
    '%endDate%': report.endDate | date("jS F Y")
} %}


{% block htmlTitle %}{{ 'summaryPage.moneyIn.htmlTitle' | trans(transOptions) }}{% endblock %}
{% block pageTitle %}{{ 'summaryPage.moneyIn.pageSectionTitle' | trans(transOptions) }}{% endblock %}
{% block pageTitleClass %}heading-large{% endblock %}

{% block breadcrumbs %}{{ macros.breadcrumbs(report) }}{% endblock %}

{% block pageContent %}

    <div class="text">
        <p>{{ 'summaryPage.moneyIn.pageSectionDescription1' | trans(transOptions) }}</p>
        <p>{{ 'summaryPage.moneyIn.pageSectionDescription2' | trans(transOptions) }}</p>
        <p>{{ 'summaryPage.moneyIn.pageSectionDescription3' | trans(transOptions) }}</p>
    </div>

    <h2 class="heading-small">{{ 'summaryPage.pageContent.weHaveListed' | trans(transOptions, 'common') }}</h2>

    <p class="text">{{ 'summaryPage.pageContent.checkCorrect' | trans(transOptions, 'common') }}</p>

    <p class="text--right flush--bottom">
        <a href="{{ path('report_overview', {'reportId': report.id}) }}" class="bold-small">Return to Report Overview</a>
    </p>

    {% include "AppBundle:Report/MoneyIn:_list.html.twig" %}

    {% include 'AppBundle:Components:nextprevious.html.twig' with {
    'previousLink': path("contacts" , {'reportId': report.id }),
    'previousLabel': 'Contacts',
    'nextLink': path("money_transfers" , {'reportId': report.id }),
    'nextLabel': 'Money Transfers',
    } %}

{% endblock %}
