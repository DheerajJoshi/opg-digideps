{
    "name": "govuk_digideps",
    "version": "0.0.1",
    "private": true,
    "config": {
        "jsFolder": "web/javascripts",
        "cssFolder": "web/stylesheets",
        "imgFolder": "web/images",
        "elements": "node_modules/govuk-elements/govuk/public/javascripts",
        "moj_template": "node_modules/moj-template/source/assets/javascripts",
        "src_js": "src/AppBundle/Resources/assets/javascripts",
        "src_sass": "src/AppBundle/Resources/assets/scss",
        "gds_sass": "node_modules/govuk-elements/govuk/public/sass",
        "elements_sass": "node_modules/govuk-elements/public/sass/elements"
    },
    "scripts": {
        "build": "npm run clean && npm run build:js && npm run build:css && npm run build:images",
        "clean": "npm run clean:css && npm run clean:js && npm run clean:images",
        "clean:js": "rm -r $npm_package_config_jsFolder/* | true & mkdirp $npm_package_config_jsFolder",
        "clean:css": "rm -r $npm_package_config_cssFolder/* | true & mkdirp $npm_package_config_cssFolder",
        "clean:images": "rm -r $npm_package_config_imgFolder/* | true & mkdirp $npm_package_config_imgFolder",
        "build:js":"npm run build:js:dev && npm run build:js:min && cp node_modules/jquery/dist/jquery.min.js web/javascripts/jquery.min.js",
        "build:js:min": "uglifyjs $npm_package_config_elements/govuk-template.js $npm_package_config_elements/govuk/selection-buttons.js $npm_package_config_moj_template/moj.js $npm_package_config_src_js/*.js -o $npm_package_config_jsFolder/application.min.js",
        "build:js:dev": "uglifyjs $npm_package_config_elements/govuk-template.js $npm_package_config_elements/govuk/selection-buttons.js $npm_package_config_moj_template/moj.js $npm_package_config_src_js/*.js -b -o $npm_package_config_jsFolder/application.dev.js",
        "build:css": "npm run build:css:min && npm run build:css:dev  && npm run build:css:print:min && npm run build:css:print:dev && npm run build:css:ie8:min && npm run build:css:ie8:dev && npm run build:css:ie7:min && npm run build:css:ie7:dev",
        "build:css:min" : "sass -I node_modules/govuk-elements/govuk/public/sass -t compressed -I node_modules/govuk-elements/public/sass -I node_modules/govuk-elements/public/sass/elements -I node_modules/govuk-elements/public/sass/elements/forms src/AppBundle/Resources/assets/scss/application.scss:web/stylesheets/application.min.css",
        "build:css:dev" : "sass -I node_modules/govuk-elements/govuk/public/sass -I node_modules/govuk-elements/public/sass -I node_modules/govuk-elements/public/sass/elements -I node_modules/govuk-elements/public/sass/elements/forms src/AppBundle/Resources/assets/scss/application.scss:web/stylesheets/application.dev.css",
        "build:css:print:min" : "sass -I $npm_package_config_gds_sass -I $npm_package_config_elements_sass -t compressed $npm_package_config_src_sass/application-print.scss:$npm_package_config_cssFolder/application-print.min.css",
        "build:css:print:dev" : "sass -I $npm_package_config_gds_sass -I $npm_package_config_elements_sass $npm_package_config_src_sass/application-print.scss:$npm_package_config_cssFolder/application-print.dev.css",
        "build:css:ie8:min" : "sass -I $npm_package_config_gds_sass -I $npm_package_config_elements_sass -t compressed $npm_package_config_src_sass/application-ie8.scss:$npm_package_config_cssFolder/application-ie8.min.css",
        "build:css:ie8:dev" : "sass -I $npm_package_config_gds_sass -I $npm_package_config_elements_sass $npm_package_config_src_sass/application-ie8.scss:$npm_package_config_cssFolder/application-ie8.dev.css",
        "build:css:ie7:min" : "sass -I $npm_package_config_gds_sass -I $npm_package_config_elements_sass -t compressed $npm_package_config_src_sass/application-ie7.scss:$npm_package_config_cssFolder/application-ie7.min.css",
        "build:css:ie7:dev" : "sass -I $npm_package_config_gds_sass -I $npm_package_config_elements_sass $npm_package_config_src_sass/application-ie7.scss:$npm_package_config_cssFolder/application-ie7.dev.css",
        "build:images": "cp -r ./src/AppBundle/Resources/assets/images ./web && cp -r ./node_modules/govuk-elements/govuk/public/images ./web",
        "lint":"npm run lint:js && npm run lint:css",
        "lint:js": "jshint ./src/AppBundle/Resources/assets/javascripts/*.js",
        "lint:css": "scss-lint ./src/AppBundle/Resources/assets/scss/**/*.scss"
    },
    "devDependencies": {
        "govuk-elements": "alphagov/govuk_elements",
        "moj-template": "ztolley/moj_template",
        "chai": "*",
        "jquery": "1.11.*",
        "mocha": "*",
        "sinon": "*",
        "jshint": "*",
        "uglify-js": "*",
        "mkdirp": "*",
        "sass-lint": "*",
        ""
    }
}
