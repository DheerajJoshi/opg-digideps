<table class="check-your-answers push-double--bottom">
    <thead>
        <tr>
            <th class="border--thicker">Question</th>
            <th class="border--thicker">Answer</th>
            <th class="border--thicker">
                <span class="visuallyhidden">Actions</span>
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                {{ 'existPage.form.exist.label' | trans(transOptions)  }}
            </td>
            <td>
                {% if report.contacts | length > 0 %}
                    Yes
                {% else %}
                    No
                {% endif %}
                {# {{ report.hasDebts == 'yes' ? 'Yes': 'No' }} #}
            </td>
            <td class="change-answer">
                <a href="{{ url('contacts_exist', { 'reportId': report.id }) }}">{{ 'summaryPage.edit'| trans }}</a>
            </td>
        </tr>
        {% if report.reasonForNoContacts %}
            <tr>
                <td>Reason for no contacts</td>
                <td>{{ report.reasonForNoContacts }}</td>
                <td class="change-answer">
                    <a href="{{ path('contacts_exist', { 'reportId': report.id}) }}">{{ 'summaryPage.edit'| trans }}</a>
                </td>
            </tr>
        {% endif %}
    </tbody>
</table>

{% if report.contacts | length > 0 %}
    <div class="border--thicker">
        <div class="grid-row">
            <div class="column-half">
                <h2 class="heading-medium flush--ends">List of contacts</h2>
            </div>
            <div class="column-half text--right">
                <a href="{{ path('contact_add', { 'reportId': report.id}) }}" class="bold-small move-quarter--up">
                    <span class="icon icon-plus"></span>
                    {{ 'summaryPage.addButton' | trans }}
                </a>
            </div>
        </div>
    </div>
{% endif %}

{% if report.contacts | length > 0 %}
    <table class="check-your-answers">
        <thead>
            <tr>
                <th>Contact</th>
                <th>Relationship</th>
                <th>Reason for contact</th>
                <th>
                    <span class="visuallyhidden">Actions</span>
                </th>
            </tr>
        </thead>
        <tbody>
            {% for contact in report.contacts %}
                <tr>
                    <td>
                        {{ contact.contactName }}<br/>
                        <p class="font-xsmall flush--ends">
                            {{ contact.address }}<br>
                            {{ contact.address2 }}<br>
                            {{ contact.county }}<br>
                            {{ contact.postcode }}<br>
                            {{ contact.country | country_name }}
                        </p>
                    </td>
                    <td>
                        {{ contact.relationship }}
                    </td>
                    <td></td>
                    <td class="change-answer soft-half--left hard--right">
                        <a href="{{ url('contact_edit', { 'reportId': report.id, 'contactId': contact.id }) }}#pageBody" class="push-half--right behat-link-contact-n{{loop.index}}">{{ 'summaryPage.edit'| trans }}</a>
                        <a href="#">Remove</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endif %}
