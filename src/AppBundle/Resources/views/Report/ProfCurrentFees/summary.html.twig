                </td>
                <td class="change-answer">
                    <a href="/report/1153/deputy-expenses/exist?from=summary" class="behat-link-edit">Edit</a>
                </td>
            </tr>
        </tbody>
    </table>

    {# Pagination #}
    {# {{ macros.reportSectionPrevNext(report, 'paFeeExpense') }} #}

    <nav class="pagination" role="navigation" aria-label="Pagination">
        <ul class="group">
            <li class="previous">
                <a title="Navigate to previous part" rel="prev" href="/report/1153/visits-care">
                    <span class="pagination-label">Previous section</span>
                    <span class="pagination-part-title">Visits and care</span>
                </a>
            </li>
            <li class="next">
                <a title="Navigate to next part" rel="next" href="/report/1153/gifts">
                    <span class="pagination-label">Next section</span>
                    <span class="pagination-part-title">Gifts</span>
                </a>
            </li>
        </ul>
    </nav>

{% endblock %}



