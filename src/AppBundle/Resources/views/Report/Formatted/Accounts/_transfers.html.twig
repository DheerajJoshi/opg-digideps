{% if transfers | length > 0 %}
    <div id="money-transfers" class="section">
        <h2 class="section-heading sub-title" id="working-out-title">Money transfers</h2>

        <table id="money-transfers-table">
            <thead>
                <tr>
                    <th>&nbsp;</th>
                    <th>Transferred from</th>
                    <th>Transferred to</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                {% for transfer in transfers %}
                    <tr>
                        <td>Transfer {{ loop.index }}</td>
                        <td>{{ transfer.from.bank }}<br/>{{ transfer.from.accountNumber }}</td>
                        <td>{{ transfer.to.bank }}<br/>{{ transfer.to.accountNumber }}</td>
                        <td>Â£{{ transfer.amount | money_format }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}
