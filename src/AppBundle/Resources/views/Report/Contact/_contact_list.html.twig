{{ 'existPage.form.exist.label' | trans(transOptions)  }}

{% if report.contacts | length > 0 %}
    Yes <a href="{{ url('contacts_exist', { 'reportId': report.id }) }}">{{ 'summaryPage.edit'| trans }}</a>
{% else %}
    Yes <a href="{{ url('contacts_exist', { 'reportId': report.id }) }}">{{ 'summaryPage.edit'| trans }}</a>
    <hr/>
    Reason for no contacts:
    <p>{{ report.reasonForNoContacts }}</p>
{% endif %}

<hr/>

{% if report.contacts | length > 0 %}
    <h2>List of Contacts....</h2>
    {% for contact in report.contacts %}
        <hr />
        <a href="{{ url('contact_edit', { 'reportId': report.id, 'contactId': contact.id }) }}#pageBody"
           class="behat-link-contact-n{{loop.index}}">{{ 'summaryPage.edit'| trans }}</a>
        {{ contact.contactName }}
        {{ contact.relationship }}
        {{ contact.address }} {{ contact.address2 }}
        {{ contact.county }}
        {{ contact.postcode }}
        {{ contact.country | country_name }}
    {% endfor %}
{% endif %}
