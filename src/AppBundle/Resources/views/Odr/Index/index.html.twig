{% extends 'AppBundle:Layouts:application.html.twig' %}
{% set translationDomain = "odr" %}
{% trans_default_domain translationDomain %}

{% block pageTitle %}{{ 'page.htmlTitle' | trans }}{% endblock %}
{% block bodyClasses %}home-odr{% endblock %}
{% block pageContent %}
    <header class="page-header">
        <h1 class="heading-xlarge">{{ 'page.title' | trans }}
            <p class="heading" style="color: #c0c0c0">{{ client.firstname }} {{ client.lastname }}</p>
        </h1>

    </header>
    <div id="page-body">


        {% if odr.submitted %}

            {% include 'AppBundle:Odr/Index:_report_row.html.twig' with {
                reportActive: reportActive,
                enabled: true,
            } %}

            {% include 'AppBundle:Odr/Index:_report_history.html.twig' with {
                reports: reportsSubmitted,
                odr: odr,
            } %}

        {% else %}

            {% include 'AppBundle:Odr/Index:_odr_row.html.twig' with {
                reports: reportsSubmitted,
                odrStatus: odrStatus,
            } %}

            {% include 'AppBundle:Odr/Index:_report_row.html.twig' with {
                reportActive: reportActive,
                enabled: false,
            } %}

        {% endif %}

    </div>
{% endblock %}