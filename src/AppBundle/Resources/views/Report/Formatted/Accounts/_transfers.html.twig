<div id="money-transfers" class="section">
    <h2 class="section-heading sub-title" id="working-out-title">Money transfers</h2>
    {% if transfers | length > 0 %}
        <table id="money-transfers-table">
            <thead>
            <tr>
                <th>&nbsp;</th>
                <th>Transferred from</th>
                <th>Transferred to</th>
                <th>Amount</th>
            </tr>
            </thead>
            <tbody>
            {% for transfer in transfers %}
                <tr>
                    <td>Transfer {{ loop.index }}</td>
                    <td>
                        {% set currentBank = transfer.accountFrom %}
                        {{ currentBank.bank }} {{ currentBank.accountTypeText }}<br/>****{{ currentBank.accountNumber }}
                    </td>
                    <td>
                        {% set currentBank = transfer.accountTo %}
                        {{ currentBank.bank }} {{ currentBank.accountTypeText }}<br/>****{{ currentBank.accountNumber }}
                    </td>
                    <td>&pound;{{ transfer.amount | money_format }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="box">
            <dl class="labelvalue">
                <dt class="label">Tick this box if you didn't move any money between {{ report.client.firstname }}'s
                    accounts.
                </dt>
                <dd class="value checkbox">{{ report.noTransfersToAdd ? 'X' : '' }}</dd>
            </dl>
        </div>
    {% endif %}
</div>
