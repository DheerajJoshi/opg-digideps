{% set translationDomain = "report-common" %}
{% trans_default_domain translationDomain %}

<header class="page-report-header page-header">
    <h1 class="heading-xlarge">
        <span class="heading-secondary">{{ report.period }} {{ 'report.header.report' | trans }}</span>
        {{ report.client.fullname }}
    </h1>
    <div class="item">
        <dl class="item-data item-data-fixed">
            <dt class="item-label">{{ 'report.header.reportingPeriod' | trans }}</dt>
            <dd class="item-value">{{ report.startDate | date("d F Y") }} {{ 'report.header.to' | trans }} {{ report.endDate | date("d F Y") }}&nbsp;</dd>
            <dt class="item-label">{{ "report.header.dueDate" | trans }}</dt>
            <dd class="item-value">{{ report.dueDate | date("d F Y") }}&nbsp;</dd>
            <dt class="item-label">{{ "report.header.caseNumber" | trans }}</dt>
            <dd class="item-value">{{ report.client.getCaseNumber }}&nbsp;</dd>
        </dl>
    </div>
    
    <a class="pdflink" href="{{ path('report_pdf', {'reportId': report.id}) }}">Download as pdf</a>

    <script>
         $(document).ready(function() {
            var ga = new opg.Ga({'timeout': 250});
            ga.trackDownloadableLink($('.pdflink'));
        });
    </script>   
       
</header>
