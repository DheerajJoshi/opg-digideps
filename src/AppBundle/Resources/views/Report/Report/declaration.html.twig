{% embed 'AppBundle:Components/Page:page-report.html.twig' %}
    {% set translationDomain = "report-declaration" %}
    {% trans_default_domain translationDomain %}


    {% block pageTitle %}{{ 'page.htmlTitle' | trans }}{% endblock %}
    {% block contentClass %}{{ parent() }} report-declaration js-report-assets-input{% endblock %}
    {% block title %}{{ 'page.pageSectionTitle' | trans }}{% endblock %}

    {% block pageNavigation %}
        {# no navigation bar for declaration #}
    {% endblock %}

    {% block pageBody %}

        {% block validationSummary %}
            {{ form_errors_list(form) }}
        {% endblock %}

        {% include 'AppBundle:Components/Page:_page-section-description.html.twig' with {
        transDomain: translationDomain,
        pageSectionDescription: 'page.pageSectionDescription',
        transOptions: {'%separator%': '<br/><br/>'}
        } %}

        {{ form_start(form, {attr: {novalidate: 'novalidate' }}) }}

        {{ form_checkbox(form.agree, 'agree', { 'labelClass': 'required extra-top' }) }}

        {{ form_checkbox_group(form.agreedBehalfDeputy, 'agreedBehalfDeputy', {
            'fieldSetClass' : 'inline radio-agreed-behalf-deputy',
            'legendClass' : 'form-label',
            'items': [
            {'labelClass': 'block-label', 'elementClass': '' },
            {'labelClass': 'block-label', 'elementClass': '' },
            {'labelClass': 'block-label', 'elementClass': '' }
            ]
        }) }}

         <div id="agreed-behalf-deputy-explanation-section">
            {{ form_input(form.agreedBehalfDeputyExplanation,'agreedBehalfDeputyExplanation', { 'labelClass': 'required', 'inputClass': 'expanding' }) }}
        </div>

        <div id="bottom-button-bar" class="form-group button-bar">
            {{ form_submit(form.save,'save') }}
        </div>

        {{ form_end(form) }}

        <div class="page-section-warning push--top flush--bottom hard--bottom">
            <span class="icon icon__notification"></span>
            <p>{{ 'unableToEditAfterSubmission' | trans()  }}</p>
        </div>

        <script type="text/javascript">
            $(document).ready(function() {
                new GOVUK.SelectionButtons(":checkbox");
                new GOVUK.SelectionButtons('.form-group__checkbox-group :radio');
                new opg.RadioHide({
                    radio:'.radio-agreed-behalf-deputy input[type=radio]',
                    content: '#agreed-behalf-deputy-explanation-section',
                    hideByDefault: true,
                    showWithValue: 'more_deputies_not_behalf'
                });
            });
        </script>

    {% endblock %}

{% endembed %}
