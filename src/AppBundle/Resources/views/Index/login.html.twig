{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData) }}</div>
    {% endif %}

    <h1 class="behat-region-page-title">Login</h1>
    <form action="{{ path('login_check') }}" method="post">
        <label for="email">Email:</label>
        <input type="text" id="email" name="email" value="{{ last_email }}" size=50 />

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" />

        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}

        <button type="submit" class="behat-link-login">login</button>
    </form>

{% endblock %}