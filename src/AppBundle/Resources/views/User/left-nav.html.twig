    <a href="{{ path('user_view') }}" class="{{ route =='user_view' ? 'active':'' }} behat-link-deputy-details">{{ 'nav.deputy-details' | trans() }}</a>
    <a href="{{ path('user_password_edit') }}" class="{{ route =='user_password_edit' ? 'active':'' }} behat-link-change-password">{{ 'nav.change-password' | trans() }}</a>
</nav>
