{% set translationDomain = "report-assets" %}
{% trans_default_domain translationDomain %}

{% extends 'AppBundle:Asset:layout-assets.html.twig'  %}

{% block maincontent %}

    <p class="page-section-description">{{ 'page.pageSectionDescription' | trans({'%client%': report.client.firstname}, translationDomain) }}</p>

    {% if report.assets is not empty %}
        {% include 'AppBundle:Components/Page:_page-section-description.html.twig' with {
            transDomain: translationDomain,
            pageSectionDescription: 'page.pageSectionEditInfo'
            } %}
    {% endif %}


    {% include 'AppBundle:Components/ButtonBar:_add_button_bar.html.twig' with {
            'report': report,
            'section': 'assets',
            'transDomain': translationDomain,
            'data': report.assets
        } %}

    {% if assets is not empty %}
        {% include 'AppBundle:Asset:_asset_list.html.twig' with {
                'report': report,
                'assets': assets, 
            } %}
    {% else %}
        {{ render(controller('AppBundle:Asset:_noAssets', { 'reportId': report.id, 'request': app.request })) }}
    {% endif %}

{% endblock %}