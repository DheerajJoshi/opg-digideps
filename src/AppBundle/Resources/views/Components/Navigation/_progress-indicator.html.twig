{% set currentStep = currentStep %}
{% set stepClasses = {
    'active': 'progress--active', 
    'completed': 'progress--completed', 
    'previous': 'progress--previous' 
} %}


<ol class="progress">
  <li class="{{ step_progress_class(1, currentStep, stepClasses) }}">
    <div class="progress__step">
      <span class="progress__label">{{ "stepTitle" | trans({}, "user-activate") }}</span>
    </div>
  </li>
  <li class="{{ step_progress_class(2, currentStep, stepClasses) }}">
    <div class="progress__step">
      <span class="progress__label">Visitor details</span>
    </div>
  </li>
  <li class="{{ step_progress_class(3, currentStep, stepClasses) }}">
    <div class="progress__step">
      <span class="progress__label">Choose time</span>
    </div>
  </li>
  <li class="{{ step_progress_class(4, currentStep, stepClasses) }}">
    <div class="progress__step">
      <span class="visuallyhidden">Current step</span>
      <span class="progress__label">Check request</span>
    </div>
  </li>
</ol>
