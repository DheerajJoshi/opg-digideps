<div class="section" id="safeguarding-section">
    <h2 class="section-heading">Visits and care</h2>

    <div class="dont-break">
        <h3 class="fieldset-outer-title">Contact with client</h3>
        <div class="box" id="safeguarding-contact">
            <div id="do-you-live-with-the-client" class="checkboxes horizontal">
                <div class="question">Do you live with the client?</div>

                <table class="yesno">
                    <tr>
                        <td class="checkbox" data-checkbox="do-you-live-with-the-client--yes">{% if visitsCare.doYouLiveWithClient == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">Yes</td>
                        <td class="checkbox" data-checkbox="do-you-live-with-the-client--no">{% if visitsCare.doYouLiveWithClient == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">No</td>
                    </tr>
                </table>

            </div>
            {% if visitsCare.doYouLiveWithClient == 'no' %}
                <div class="form-group form-group-vertical">
                    <div class="question">How often do you contact the client and how do you make sure others are looking after the client's needs if you can't ?</div>
                    <div class="value textarea">{{ visitsCare.howOftenDoYouContactClient | nl2br }}</div>
                </div>
            {% endif %}
        </div>
    </div>
    <div class="dont-break">
        <h3 class="fieldset-outer-title">Care arrangements</h3>
        <div class="box" id="care-arrangements-subsection">

            <div class="checkboxes horizontal" id="safeguarding-paid-for-care">
                <div class="question">Does the client receive care which is paid for?</div>

                <table class="yesno">
                    <tr>
                        <td class="checkbox" data-checkbox="does-the-client-receive-care-which-is-paid-for--yes">{% if visitsCare.doesClientReceivePaidCare == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">Yes</td>
                        <td class="checkbox" data-checkbox="does-the-client-receive-care-which-is-paid-for--no">{% if visitsCare.doesClientReceivePaidCare == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">No</td>
                    </tr>
                </table>
            </div>

            <div class="checkboxes horizontal" id="safeguarding-care-funding">
                <div class="label intro">If yes, how is the care funded?</div>
                <div class="form-group right-label">
                    <table>
                        <tr>
                            <td>
                                <div class="checkbox" data-checkbox="how-is-care-funded--client-pays-for-all-their-own-care">{% if visitsCare.doesClientReceivePaidCare == 'yes' and visitsCare.howIsCareFunded == 'client_pays_for_all' %}X{% else %}&nbsp;{% endif %}</div>
                            </td>
                            <td class="label">Client pays for all their own care</td>
                        </tr>
                        <tr>
                            <td>
                                <div class="checkbox" data-checkbox="how-is-care-funded--client-gets-financial-help">{% if visitsCare.doesClientReceivePaidCare == 'yes' and visitsCare.howIsCareFunded == 'client_gets_financial_help' %}X{% else %}&nbsp;{% endif %}</div>
                            </td>
                            <td class="label">Client gets some financial help (for example, from the local authority or council, or NHS)</td>
                        </tr>
                        <tr>
                            <td>
                                <div class="checkbox" data-checkbox="how-is-care-funded--all-care-is-paid-by-someone-else">{% if visitsCare.doesClientReceivePaidCare == 'yes' and visitsCare.howIsCareFunded == 'all_care_is_paid_by_someone_else' %}X{% else %}&nbsp;{% endif %}</div>
                            </td>
                            <td class="label">All care is paid for by someone else (for example, by the local authority or council, or NHS)</td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="form-group form-group-vertical">
                <div class="question">Who is doing the caring?</div>
                <div class="value textarea">{{ visitsCare.whoIsDoingTheCaring }}</div>
            </div>

        </div>
    </div>

    {% if visitsCare.doesClientHaveACarePlan %}
    <div class="dont-break">
        <h3 class="fieldset-outer-title">Care plan</h3>
        <div class="box" id="care-plan-subsection">
            <div class="question">If there is a care plan, when was it last reviewed?</div>
            {% if visitsCare.doesClientHaveACarePlan == 'no' %}
                <dl class="labelvalue inline">
                    <dd class="checkbox">X</dd>
                    <dt class="label">There is no care plan</dt>
                </dl>
            {% endif %}
            {% if visitsCare.doesClientHaveACarePlan == 'yes' %}
                <dl class="labelvalue">
                    <dt class="label">Review date</dt>
                    <dd class="value">{{ visitsCare.whenWasCarePlanLastReviewed | date("m / Y") }}</dd>
                </dl>
            {% endif %}
        </div>
    </div>
    {% endif %}

</div>
