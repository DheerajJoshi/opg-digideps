{#
Component parameters
--------------------

showAddForm (true/false)
showMoreLink (true/false)
#}

{% if (not showAddForm) %}

    {# Then we need to show the Add Button Link #}
    {% include 'AppBundle:Components/ButtonBar:_start.html.twig' with {
    buttonBarClass: 'add-bar js-add-contact-button-bar'
    } %}

    {% set  params = app.request.attributes.get('_route_params') %}

    {% if showMoreLink %}
        {% set label = 'form.controls.addButton.moreLabel' %}
    {% else %}
        {% set label = 'form.controls.addButton.label' %}
    {% endif %}

    {% include 'AppBundle:Components/Link:_link-button.html.twig' with {
    transDomain: translationDomain,
    linkButtonLabel: label,
    linkClass: 'button-secondary behat-link-add-a-decision behat-region-add-a-decision',
    linkHref: path('decisions', {'reportId': params['reportId'], 'action': 'add' }) ~ "#pageBody"
    } %}

    {% include 'AppBundle:Components/ButtonBar:_end.html.twig' %}

{% endif %}
