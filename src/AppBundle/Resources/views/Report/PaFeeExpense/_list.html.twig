{% set translationDomain = "report-pa-fee-expense" %}
{% trans_default_domain translationDomain %}

<table class="check-your-answers columns-2 push-double--bottom">
    <thead>
    <tr>
        <th>Question</th>
        <th>Answer</th>
        <th>
            <span class="visuallyhidden">Actions</span>
        </th>
    </tr>
    </thead>
    <tbody>
    <tr class="behat-region-has-contacts">
        <td>
            {{ 'existPage.form.hasFees.label' | trans(transOptions)  }}
        </td>
        <td>
            {{ report.hasFees | capitalize }}
        </td>
        <td class="change-answer">
            <a href="{{ url('pa_fee_expense_fee_exist', { 'reportId': report.id, 'from': 'summary' }) }}" class="behat-link-edit">{{ 'summaryPage.edit'| trans }}</a>
        </td>
    </tr>
    {% if report.reasonForNoFees %}
        <tr class="behat-region-reason-no-contacts">
            <td>Reason for not having charged the client any fees for your services during the reporting period</td>
            <td>{{ report.reasonForNoFees | nl2br }}</td>
            <td class="change-answer">
                <a href="{{ path('pa_fee_expense_fee_exist', { 'reportId': report.id, 'from': 'summary'}) }}" class="action-link behat-link-edit">{{ 'summaryPage.edit'| trans }}</a>
            </td>
        </tr>
    {% endif %}
    </tbody>
</table>

{% if report.hasFees == 'yes' %}

    {# Items list heading #}
    <div class="grid-row behat-region-debts-list">
        <div class="column-half">
            <h2 class="heading-medium flush--ends">List of deputy fees and expenses</h2>
        </div>
        <div class="column-half text--right">
            <a href="{{ path('pa_fee_expense_fee_edit', {'reportId': report.id, 'from': 'summary'}) }}" class="bold-small action-link behat-link-edit">Edit</a>
        </div>
    </div>

    {# Items list table #}
    <table class="check-your-answers columns-2">
        <thead>
        <tr>
            <th>Description</th>
            <th class="numeric">Amount</th>
        </tr>
        </thead>
        <tbody>
        {% for fee in report.fees %}
            <tr class="behat-region-debt-{{ fee.feeTypeId | behat_namify }}">
                <td>
                    {% set feeLabel = ('form.entries.' ~ fee.feeTypeId ~ '.label') | trans(transOptions) %}
                    {% if fee.hasMoreDetails %}
                       <p >{{ feeLabel }}</p>
                       <p class="form-hint">{{ fee.moreDetails | nl2br }}</p>
                    {% else %}
                         {{ feeLabel }}
                    {% endif %}

                </td>
                <td class="numeric-small">£{{ fee.amount | money_format }}</td>
            </tr>

        {% endfor %}
        <tr>
            <td class="no-border">
                <span class="bold-small">Total amount</span>
            </td>
            <td class="no-border text--right">
                <span class="bold-small">£{{ report.feesTotalAmount | money_format }}</span>
            </td>
        </tr>
        </tbody>
    </table>

