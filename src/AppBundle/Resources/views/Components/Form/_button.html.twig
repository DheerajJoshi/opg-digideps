{% set buttonClass = buttonClass | default('') %}
{% if 'disabled' in buttonClass %}
    {{ form_widget(element, {
    'label': labelText ,
    'attr': {'class': 'button ' ~ buttonClass },
    'disabled': true
    }) }}
{% else %}
    {{ form_widget(element, {
    'label': labelText ,
    'attr': {'class': 'button ' ~ buttonClass }
    }) }}
{% endif %}
