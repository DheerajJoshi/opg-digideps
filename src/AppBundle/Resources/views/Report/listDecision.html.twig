{% extends 'AppBundle:Components/Page:page-report.html.twig' %}
{% trans_default_domain "report-decisions" %}

{% block pageTitle %}{{ 'page.htmlTitle' | trans }}{% endblock %}
{% block title %}{{ 'page.htmlTitle' | trans }}{% endblock %}

 {% block pageNavigation %}
   {{ tab('report', 'tab-decisions', {'reportId': report.id}) }}
{% endblock %}

{% block pageBody %}
    
    <h1 class="form-title heading-medium-large">{{ 'page.headTitle' | trans }}</h1>
    <p>{{ 'page.subTItle' | trans }}</p>
    
    {% if showAddForm %}
        <div style="margin: 20px; border-left: #CCCCCC 5px solid; padding: 10px;">
            {% include 'AppBundle:Report:_decision_form.html.twig' %}
        </div>
    {% else %}
        <a href="{{ path('add_decision', {'reportId': report.id}) }}">{{ 'page.addDecisionButton' |trans }}</a>
    {% endif %}
    
    
    
    <div class="behat-region-decision">
      {% for decision in decisions %}
         <hr/>
        <h3 class="form-title heading-medium-large">{{ decision.title }} </h3>
        Description: <br/>
        {{ decision.description }}<br/><br/>
        
        Date: {{ decision.decisionDate | date() }}<br/>
        Client involvement: {{ decision.clientInvolvedBoolean ? 'Yes' : 'No'}}<br/>
        {{ decision.clientInvolvedDetails | nl2br }}
       
      {% endfor %}
    </div>
    
{% endblock %}
