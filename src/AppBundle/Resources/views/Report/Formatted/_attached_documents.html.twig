{% if report.wishToProvideDocumentation %}
    <div class="section" id="documents-section">
        <h2 class="section-heading">Documents</h2>

        <div class="dont-break">
            <h3 class="fieldset-outer-title">Supporting documents</h3>
            <div class="box">
                <div class="checkboxes horizontal">
                    <div class="question">{{ title }}</div>

                    <table class="yesno">
                        <tr>
                            <td class="checkbox"
                                data-checkbox="">{% if report.wishToProvideDocumentation == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">Yes</td>
                            <td class="checkbox"
                                data-checkbox="">{% if report.wishToProvideDocumentation == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">No</td>
                        </tr>
                    </table>

                </div>
            </div>
        </div>

        <div class="grid-row">
            <div class="column-half">
                <h2 class="heading-medium flush--ends">Attached documents</h2>
            </div>
        </div>
        <table>
            <thead>
            <th>Filename</th>
            <th>Date attached</th>
            </thead>
            <tbody class="behat-region-document-list">
            {% if report.documents | length > 0 %}
                {% for document in report.documents %}
                    <tr>
                        <td>{{ document.fileName }}</td>
                        <td>{{ document.createdOn | date("j F Y H:i") }}</td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="2">No documents attached</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
{% endif %}
