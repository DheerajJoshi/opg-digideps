{% extends 'AppBundle:Layouts:application.html.twig' %}

{% set translationDomain = "admin-checklist" %}
{% trans_default_domain translationDomain %}

{% set page = 'checklistSubmittedPage' %}

{% block htmlTitle %}{{ (page ~ '.htmlTitle') | trans }}{% endblock %}
{% block pageTitle %}{% endblock %}

{% block pageContent %}
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">
                    <div class="govuk-panel govuk-panel--confirmation">
                        <h1 class="govuk-panel__title">{{ (page ~ '.supportTitle') | trans }}</h1>
                        <div class="govuk-panel__body">
                            {{ report.client.fullName }} - {{ ('reportTitles.' ~ report.reportTitle) | trans({}, 'report') }}
                        </div>
                    </div>
                    <p class="govuk-body govuk-!-padding-top-6 govuk-!-padding-bottom-6">
                        Your PDF download should start automatically. <a href="{{ path('admin_checklist_pdf', {'id': report.id}) }}" class="behat-link-download-checklist-pdf">Click here</a> to download it if it does not download automatically.
                    </p>
                    <a href="{{ path('admin_report_checklist', {'id': report.id}) }}" role="button" draggable="false" class="govuk-button govuk-button--secondary govuk-!-margin-right-1" data-module="govuk-button">
                        Return to checklist
                    </a>
                    <a href="{{ path('admin_client_search')}}" role="button" draggable="false" class="govuk-button govuk-button" data-module="govuk-button">
                        View client list
                    </a>
                </div>
            </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
      window.location.href = "{{ path('admin_checklist_pdf', {'id': report.id}) }}";
    </script>
{% endblock %}


