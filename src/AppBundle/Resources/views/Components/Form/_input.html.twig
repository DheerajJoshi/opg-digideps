<div class="form-group {% if not element.vars.valid %}field-with-errors behat-region-form-errors{% endif %}" id="{{ element.vars.id }}-group">

    {{ form_label(element, labelText, {'label_attr': {'class': 'form-label ' ~ labelClass | default('') }}) }}

    {{ form_errors(element) }}

    {% if (hintText is defined) and (hintText is not empty) %}
        <p class="form-hint">{{ hintText }}</p>
    {% endif %}

    {% set class = element.vars.attr.class | default('') ~ ' form-control ' ~ inputClass | default('') %}


    {% if element.vars.valid %}
        {{ form_widget(element, { 'attr': {'class': class } }) }}
    {% else %}
        {{ form_widget(element, { 'attr': {'class': class, 'aria-invalid':'true' } }) }}
    {% endif %}

</div>