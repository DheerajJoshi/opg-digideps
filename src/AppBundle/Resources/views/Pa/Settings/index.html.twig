{% extends 'AppBundle:Layouts:application.html.twig' %}

{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% block htmlTitle %}Settings{% endblock %}
{% block pageTitle %}Settings{% endblock %}
{% block pageTitleClass %}heading-large{% endblock %}

{% set isNamedOrAdmin = (app.user.roleName == 'ROLE_PA' or app.user.roleName == 'ROLE_PA_ADMIN') %}

{% block pageContent %}

    <a href="{{ path('pa_team') }}" class="behat-link-user-accounts">
        <h2 class="heading-small">User accounts</h2>
    </a>
    <p class="text text-info">
        {% if isNamedOrAdmin %}
            Add, edit and remove user accounts for your team members
        {% else %}
            View team members
        {% endif %}
    </p>

    <a href="{{ path('pa_profile_show') }}" class="behat-link-profile-show">
        <h2 class="heading-small">Your account</h2>
    </a>
    <p class="text text-info">
        Update any details on your account such as job title, telephone number or email address
    </p>

{% endblock %}
